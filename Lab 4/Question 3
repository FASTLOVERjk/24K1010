#include<stdio.h>

int main() {
char o;
float num1,num2,result; 
printf("Enter an operator: ");
scanf("%c" , &o);
printf("Enter two Numbers: ");
scanf("%1f %1f", num1, num2");
switch (o) {
   case '+':
   result = num1+num2;
printf("Result: %.2f\n", result);
break;
   case'-':
   result = num1-num2;
printf("result:%.2f\n", result);
break;
   case'*':
result=num1*num2;
printf("result:%.2f\n", result);
   case'/':
if (num2!=0){
result=num1/num2;
printf("result=%.2f\n", result);
}
else {
printf("Undefined\n");
}
break;
default:
printf("Invalid operator. ");
break;
}
return 0;
}
